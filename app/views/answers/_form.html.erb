<%= form_for([@question, @question.answers.build]) do |f| %>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </div>
  <%= f.submit "Reply", class: "btn btn-default"  %>
<% end %>
